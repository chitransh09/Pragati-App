<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.AptitudeFragment"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/aptitudeToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextColor="?attr/colorOnPrimary"
        android:background="?attr/colorPrimary">

        <TextView
            android:id="@+id/webDevToolbarText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aptitude"
            android:layout_marginTop="14dp"
            android:textAlignment="center"
            android:fontFamily="@font/poppinssemi"
            android:textSize="28sp"
            android:textColor="#ffffff"/>

    </androidx.appcompat.widget.Toolbar>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/aptitudeRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/aptitudeToolbar"
        tools:listitem="@layout/recyclerview_single_item"/>

    <include layout="@layout/recyclerview_shimmer_effect"
        android:layout_below="@id/aptitudeToolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="invisible"
        android:indeterminate="true"
        android:indeterminateTintMode="src_atop"/>

</RelativeLayout>