<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.HigherStudyFragment"
    android:orientation="vertical"
    android:background="?attr/colorOnSecondary"
    android:layoutAnimation="@anim/layout_animation">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/higherStudylToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        app:titleTextColor="?attr/colorOnPrimary">

        <TextView
            android:id="@+id/higherStudyToolbarText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Higher Study"
            android:layout_marginTop="14dp"
            android:textAlignment="center"
            android:fontFamily="@font/poppinssemi"
            android:textSize="28sp"
            android:textColor="#ffffff"/>

    </androidx.appcompat.widget.Toolbar>

    <androidx.cardview.widget.CardView
        android:id="@+id/higherStudyCard1"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        android:padding="8dp"
        android:outlineAmbientShadowColor="@color/seed"
        android:outlineSpotShadowColor="@color/seed"
        style="?attr/materialCardViewFilledStyle">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgGate"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:src="@drawable/gate"
                android:padding="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GATE(Graduate Aptitude Test in Engineering)"
                android:textSize="20sp"
                android:justificationMode="inter_word"
                android:padding="8dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/poppinssemi"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/imgGate"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/higherStudyCard2"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        android:padding="8dp"
        android:outlineAmbientShadowColor="@color/seed"
        android:outlineSpotShadowColor="@color/seed"
        style="?attr/materialCardViewFilledStyle">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgCat"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:src="@drawable/cat"
                android:padding="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CAT(Common Admission Test)"
                android:justificationMode="inter_word"
                android:textSize="20sp"
                android:padding="8dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/poppinssemi"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/imgCat"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>