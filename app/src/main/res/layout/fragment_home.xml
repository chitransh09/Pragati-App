<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.HomeFragment">

    <TextView
        android:id="@+id/txtHey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="?attr/colorOnSurface"
        android:fontFamily="@font/poppinssemi"
        android:padding="10dp"
        android:text="Hey, there !"
        android:textSize="25sp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/txtHey">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/card7"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="15dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                android:padding="8dp"
                style="?attr/materialCardViewFilledStyle">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imgAptitude"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/aptitude"
                        android:padding="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Aptitude"
                        android:textSize="22sp"
                        android:padding="8dp"
                        android:textAlignment="center"
                        android:textColor="?attr/colorOnBackground"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:fontFamily="@font/poppinssemi"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/imgAptitude"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/card1"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="15dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                android:padding="8dp"
                style="?attr/materialCardViewFilledStyle">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imgSchool"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/school"
                        android:padding="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="School"
                        android:textSize="22sp"
                        android:padding="8dp"
                        android:textAlignment="center"
                        android:textColor="?attr/colorOnBackground"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:fontFamily="@font/poppinssemi"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/imgSchool"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card2"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="15dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                android:padding="8dp"
                style="?attr/materialCardViewFilledStyle">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imgDS"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ds"
                        android:padding="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Data Structure"
                        android:textSize="20sp"
                        android:padding="8dp"
                        android:textAlignment="center"
                        android:layout_marginRight="5dp"
                        android:textColor="?attr/colorOnBackground"
                        android:layout_marginLeft="5dp"
                        android:fontFamily="@font/poppinssemi"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/imgDS"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card3"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="15dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                android:padding="8dp"
                style="?attr/materialCardViewFilledStyle">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imgWD"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/webdev"
                        android:padding="10dp"/>

                    <TextView
                        android:id="@+id/txtWeb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_toEndOf="@id/imgWD"
                        android:text="Web"
                        android:textColor="?attr/colorOnBackground"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:fontFamily="@font/poppinssemi"
                        android:layout_marginTop="30dp"/>

                    <TextView
                        android:id="@+id/txtdevelopment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_below="@id/txtWeb"
                        android:layout_toEndOf="@id/imgWD"
                        android:text="Development"
                        android:textColor="?attr/colorOnBackground"
                        android:textAlignment="center"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:textSize="20sp"
                        android:fontFamily="@font/poppinssemi"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card4"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="15dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                android:padding="8dp"
                style="?attr/materialCardViewFilledStyle">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imgDSandML"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/dsandml"
                        android:padding="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_toRightOf="@id/imgDSandML"
                        android:text="Data Science and ML"
                        android:textColor="?attr/colorOnBackground"
                        android:textSize="20sp"
                        android:padding="8dp"
                        android:textAlignment="center"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:fontFamily="@font/poppinssemi"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card5"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="15dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                android:padding="8dp"
                style="?attr/materialCardViewFilledStyle">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imgFL"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/freelancing"
                        android:padding="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_toEndOf="@id/imgFL"
                        android:fontFamily="@font/poppinssemi"
                        android:padding="8dp"
                        android:text="Freelancing"
                        android:textColor="?attr/colorOnBackground"
                        android:textAlignment="center"
                        android:textSize="20sp" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card6"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="15dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                android:padding="8dp"
                style="?attr/materialCardViewFilledStyle">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imgHS"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/hs"
                        android:padding="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/imgHS"
                        android:text="Higher Study"
                        android:textColor="?attr/colorOnBackground"
                        android:textSize="22sp"
                        android:padding="8dp"
                        android:textAlignment="center"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:fontFamily="@font/poppinssemi"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>