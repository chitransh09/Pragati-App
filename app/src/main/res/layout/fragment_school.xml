<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.SchoolFragment"
    android:orientation="vertical"
    android:background="?attr/colorOnSecondary">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/schoolToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        app:titleTextColor="?attr/colorOnPrimary">

        <TextView
            android:id="@+id/schoolToolbarText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="School"
            android:layout_marginTop="14dp"
            android:textAlignment="center"
            android:fontFamily="@font/poppinssemi"
            android:textSize="28sp"
            android:textColor="#ffffff"/>

    </androidx.appcompat.widget.Toolbar>

    <androidx.cardview.widget.CardView
        android:id="@+id/schoolCard1"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        android:padding="8dp"
        android:outlineAmbientShadowColor="@color/seed"
        android:outlineSpotShadowColor="@color/seed"
        style="?attr/materialCardViewFilledStyle">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgJee"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:src="@drawable/jee"
                android:padding="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="JEE(Joint Entrence Exam)"
                android:textSize="24sp"
                android:padding="8dp"
                android:textAlignment="center"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/poppinssemi"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/imgJee"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/schoolCard2"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        android:padding="8dp"
        android:outlineAmbientShadowColor="@color/seed"
        android:outlineSpotShadowColor="@color/seed"
        style="?attr/materialCardViewFilledStyle">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgNeet"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:src="@drawable/neet"
                android:padding="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NEET"
                android:textSize="24sp"
                android:padding="8dp"
                android:textAlignment="center"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/poppinssemi"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/imgNeet"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>